<div class="well container-fluid" id="registerDiv" hidden>
	<form action="/register" method="post" id="registerForm">
	<h2>Please enter the requested information as accurately as possible</h2>
    <div class="form-group row">
       <label for="email" class="col-sm-2 form-control-label">Email</label>
        <div class="col-sm-10">
           <input type="email" class="form-control textInput" name="email" placeholder="email"></input>
        </div>
    </div>   
		<div class="form-group row">
    	 <label for="firstname" class="col-sm-2 form-control-label">First Name</label>
    		<div class="col-sm-10">
       		 <input type="text" class="form-control textInput" name="firstname" placeholder="firstname"></input>
    		</div>
		</div>   
		<div class="form-group row">
    	 <label for="lastname" class="col-sm-2 form-control-label">Last Name</label>
    		<div class="col-sm-10">
       		 <input type="text" class="form-control textInput" name="lastname" placeholder="lastname"></input>
    		</div>
		</div>
		<div class="form-group row">
    	 <label for="username" class="col-sm-2 form-control-label">User Name</label>
    		<div class="col-sm-10">
    		<span>Enter a user name (at least 4 characters)</span>
       		 <input type="name" class="form-control textInput" name="username" placeholder="username"></input>
    		</div>
		</div>
		<div class="form-group row">
    	 <label for="password" class="col-sm-2 form-control-label">Password</label>
    		<div class="col-sm-10">
    		<span>Enter Password (min. 6 characters, 2 numbers)</span>
       		 <input type="password" class="form-control textInput" name="password" placeholder="password"></input>
    		</div>
		</div>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <button id="registerSubmit" type="submit" class="btn btn-secondary">Submit</button>
          </div>
    </div>
    </form>
</div>