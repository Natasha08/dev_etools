<!DOCTYPE html>
<html>
  <head>  
    <% include ./partials/head %>
  </head> 
  <header>
    <% include ./partials/header %>                
  </header>
  <body class="container-fluid" class="col-md-12">

      <div>
      <div class="jumbotron">
        <div class="container">
          <h1>My e-fridge</h1>
          <% if (!isAuthenticated) { %>
            <a href="/">Log in here</a>
            <% } else { %>
              Hello, <%= user.username %>
                 <% } %>          
        </div>  
      </div>
      </div>
      <div id="dataSearch" class="well" hidden>
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input id="userSearch" type="text" class="form-control" placeholder="Search my e-Fridge">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
       <p><strong><%= description %></strong></p>
      </div>
      <div class="well">
          <button type="button" class="btn btn-lg btn-primary" id="btntest1">Create Food</button>
          <button type="button" class="btn btn-lg btn-secondary" id="btntest3">Database</button>
      </div>
       <% include ./partials/food_table.ejs %>
<div class="well" id="foodProfile" hidden>
  <form action="/efridge" method="post" id="foodForm">
  <h2>Create a new food profile</h2>
    <div class="form-group row">
       <label for="food_name" class="col-sm-2 form-control-label">Food Name</label>
        <div class="col-sm-10">
           <input type="text" class="form-control textInput" name="food_name" id="food_name" placeholder="Enter name of food here. E.g. 'Avocado, small'"></input>
        </div>
    </div>
    <div class="form-group row">
       <label for="brand" class="col-sm-2 form-control-label">Brand</label>
        <div class="col-sm-10">
           <input type="text" class="form-control textInput" id="brand" name="brand" placeholder="--"></input>
        </div>
    </div>
    <div class="form-group row">
       <label for="serving_size" class="col-sm-2 form-control-label">Serving Size</label>
        <div class="col-sm-10">
        <span>Enter the serving size E.g. 1 or 2.5.</span>
           <input type="text" class="form-control numInput" name="serving_size" id="serving_size" placeholder="0"></input>
        </div>
    </div>
    <div class="form-group row">
       <label for="total_calories" class="col-sm-2 form-control-label">Total Calories</label>
        <div class="col-sm-10">
        <span>Enter the total calories..</span>
           <input type="number" class="form-control numInput" name="total_calories" id="total_calories" placeholder="0"></input>
        </div>
    </div>
    <div class="form-group row">
       <label for="fat_grams" class="col-sm-2 form-control-label">Fat(g)</label>
        <div class="col-sm-10">
        <span>Enter the total fat grams.</span>
           <input type="number" class="form-control numInput" name="fat_grams" id="fat_grams" placeholder="0"></input>
        </div>
    </div>
    <div class="form-group row">
       <label for="carbohydrate_grams" class="col-sm-2 form-control-label">Carbohydrate(g)</label>
        <div class="col-sm-10">
        <span>Enter the total carbohydrate grams.</span>
           <input type="number" class="form-control numInput" name="carbohydrate_grams" id="carbohydrate_grams" placeholder="0"></input>
        </div>
    </div>
    <div class="form-group row">
       <label for="protein_grams" class="col-sm-2 form-control-label">Protein(g)</label>
        <div class="col-sm-10">
        <span>Enter the total protein grams.</span>
           <input type="number" class="form-control numInput" name="protein_grams" id="protein_grams" placeholder="0"></input>
        </div>
    </div>
    <div class="form-group row">
       <label for="total_grams" class="col-sm-2 form-control-label">Total Macros(g)</label>
        <div class="col-sm-10">
        <span>Enter the total macro grams.</span>
           <input type="number" class="form-control numInput" name="total_grams" id="total_grams" placeholder="0"></input>
        </div>
    </div>
    <div hidden>   
    <input type="number" name="user_id" placeholder="1"></input>  
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
            <button id="foodSubmit" type="submit" class="btn btn-secondary">Submit</button>
          </div>
    </div>
  </form>
</div>
      <script type="text/javascript" src="javascripts/bundle2.js"></script>
  </body>
</html>
